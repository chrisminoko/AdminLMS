@model IEnumerable<BackEnd.Models.PackageType>

@{
    ViewBag.Title = "Index";
}

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <!-- Zero config.table start -->
            <div class="card">
                <div class="card-header">
                    <h5>Package Types</h5>

                </div>
                <div class="card-block">
                    <div class="dt-responsive table-responsive">
                        <table class="table">
                            <tr>
                                <th>
                                    Package Type Name
                                </th>
                                <th></th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PackageName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.PackageTypeID }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.PackageTypeID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.PackageTypeID })
                                    </td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            @{
                Html.RenderAction("CreatePackage");
            }
        </div>
    </div>

</div>
