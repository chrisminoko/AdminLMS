@model IEnumerable<BackEnd.Models.OnlineShop.Department>

<div class="container">
    <div class="page-body">
        <a href="@Url.Action("Create", "Departments")" button class="btn"><i class="fa fa-plus-circle"></i> Add New</a>
        <div class="row">
            <div class="col-sm-12">
                <!-- Zero config.table start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Department</h5>

                    </div>
                    <div class="card-block">
                        <div class="dt-responsive table-responsive">
                            <table class="table table-striped table-bordered nowrap" id="my_list">
                                <thead>
                                    <tr class="table-header-row">
                                        <th>
                                            @Html.DisplayNameFor(model => model.Department_ID)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Department_Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        <th>Actions</th>
                                    </tr>

                                </thead>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Department_ID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Department_Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details","Departments", new { id=item.Department_ID })" rel="tooltip" title="View" class="btn btn-info btn-simple btn-xs"><i class="fa fa-eye"></i></a>
                                            <a href="@Url.Action("Edit","Departments", new { id=item.Department_ID })" rel="tooltip" title="Edit" class="btn btn-success btn-simple btn-xs"><i class="fa fa-edit"></i></a>
                                            <a href="@Url.Action("Delete", "Departments", new { id = item.Department_ID })" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs"><i class="fa fa-times"></i></a>
                                        </td>
                                    </tr>
                                }
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





                        <script type="text/javascript">
                            $('#my_list').ModelsTable(
                                {
                                    dom: 'Bfrtip',
                                    lengthMenu: [
                                        [10, 25, 50, -1],
                                        ['10 rows', '25 rows', '50 rows', 'Show all']
                                    ],
                                    buttons: [
                                        'pageLength', 'pdf', 'print'
                                    ]
                                }
                            );
                            $('#my_list')
                                .removeClass('display')
                                .addClass('table table-striped table-hover');
                        </script>
