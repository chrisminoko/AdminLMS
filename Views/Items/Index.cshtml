@model IEnumerable<BackEnd.Models.OnlineShop.Item>


<h2 class="title text-center">@ViewBag.Title</h2>

<div class="container-fluid">
    <div class="page-body">
        <a href="@Url.Action("Create", "Items")" button class="btn"><i class="fa fa-plus-circle"></i> Add New</a>
        <div class="row">
            <div class="col-sm-12">
                <!-- Zero config.table start -->
                <div class="card">
                    <div class="card-header">
                        <h5>Products</h5>

                    </div>
                    <div class="card-block">
                        <div class="dt-responsive table-responsive">
                            <table class="table table-striped table-bordered nowrap" id="my_list">
                                <tr class="table-header-row">
                                    <th>
                                        @Html.DisplayNameFor(model => model.Picture)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ItemCode)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        Category
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.QuantityInStock)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Price)
                                    </th>
                                    <th>Action</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a><img src="data:image/png;base64,@Convert.ToBase64String(item.Picture, 0, item.Picture.Length)" style="width: 40px; height: 40px" alt="" /></a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ItemCode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Category.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.QuantityInStock)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details","Items", new { id=item.ItemCode })" rel="tooltip" title="View" class="btn btn-info btn-simple btn-xs"><i class="fa fa-eye"></i></a>
                                            <a href="@Url.Action("Edit","Items", new { id=item.ItemCode })" rel="tooltip" title="Edit" class="btn btn-success btn-simple btn-xs"><i class="fa fa-edit"></i></a>
                                            <a href="@Url.Action("Delete", "Items", new { id = item.ItemCode })" rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-xs"><i class="fa fa-times"></i></a>
                                        </td>
                                    </tr>
                                }


                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>












































<script type="text/javascript">
    $('#my_list').ModelsTable(
        {
            dom: 'Bfrtip',
            lengthMenu: [
                [10, 25, 50, -1],
                ['10 rows', '25 rows', '50 rows', 'Show all']
            ],
            buttons: [
                'pageLength', 'csv', 'pdf', 'print'
            ],
            language: { search: "" },
            select: true
        }
    );
    $(".ModelsTables_filter input").addClass("search-input");
    $(".ModelsTables_filter input").attr('placeholder', 'Search');
    $('#my_list')
        .removeClass('display')
        .addClass('table table-striped table-hover');
</script>