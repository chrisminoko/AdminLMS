@model BackEnd.Models.OnlineShop.Item


<div class="main-body">
    <div class="page-wrapper">
        <!-- Page-body start -->
        <div class="page-body">
            <div class="card">
                <div class="card-header">
                    <h5>Product Details</h5>
                    <span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>
                </div>
                <div class="card-block col-md-12 test">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.Picture, 0, Model.Picture.Length)" style="width: 300px; height: 300px" alt="" />
                        </div>
                        <div class="col-md-12 pull-right">
                            <table class="table">
                                @if (!User.IsInRole("Customer"))
                                {
                                    <tr>
                                        <th>@Html.LabelFor(model => Model.ItemCode)</th>
                                        <td>
                                            @Html.DisplayFor(model => model.ItemCode)
                                        </td>
                                    </tr>
                                }

                                <tr>
                                    <th>@Html.LabelFor(model => Model.Name)</th>
                                    <td>
                                        @Html.DisplayFor(model => model.Name)
                                    </td>
                                </tr>
                                <tr>
                                    <th>Category</th>
                                    <td>
                                        @Html.DisplayFor(model => model.Category.Name)
                                    </td>
                                </tr>
                                @*<tr>
            <th>@Html.LabelFor(model => Model.Description)</th>
            <td>
                @Html.DisplayFor(model => model.Description)
            </td>
        </tr>*@
                                <tr>
                                    <th>@Html.LabelFor(model => Model.QuantityInStock)</th>
                                    <th>
                                        @Html.DisplayFor(model => model.QuantityInStock)
                                    </th>
                                </tr>
                                <tr>
                                    <th>@Html.LabelFor(model => Model.Price)</th>
                                    <th>
                                        @Html.DisplayFor(model => model.Price)
                                    </th>
                                </tr>
                                <tr>
                                    <th>Average Review</th>
                                    <th>
                                        @Html.DisplayFor(model => model.ReviewId)%
                                    </th>
                                </tr>
                                <tr>
                                    @if (!User.IsInRole("Customer"))
                                    {
                                        <td>
                                            <a class="btn btn-default" href="@Url.Action("Index","Items")">
                                                <i class="fa fa-angle-left"></i>
                                                Back to List
                                            </a>
                                        </td>
                                        <td>
                                            <a class="btn btn-default" href="@Url.Action("Edit","Items", new { id = Model.ItemCode })">
                                                <i class="fa fa-edit"></i>
                                                Edit
                                            </a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <a class="btn btn-default" href="@Url.Action("Index","Shopping")">
                                                <i class="fa fa-angle-left"></i>
                                                Back to Shopping
                                            </a>
                                        </td>
                                    }

                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>












                
