@model BackEnd.Models.OnlineShop.Category

@{
    ViewBag.Title = "Category Details";
}

<div class="container-fluid">
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <h5> Category Details</h5>
                        <span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>
                    </div>
                    <div class="card-block col-md-12 test">

                        <table class="table">
                            <tr>
                                <th>@Html.LabelFor(model => model.Category_ID)</th>
                                <td>
                                    @Html.DisplayFor(model => model.Category_ID)
                                </td>
                            </tr>
                            <tr>
                                <th>@Html.LabelFor(model => model.Name)</th>
                                <td>
                                    @Html.DisplayFor(model => model.Name)
                                </td>
                            </tr>
                            <tr>
                                <th>@Html.LabelFor(model => model.Department_ID)</th>
                                <td>
                                    @Html.DisplayFor(model => model.Department_ID)
                                    @Html.ValidationMessageFor(model => model.Department_ID, "", new { @class = "text-danger" })
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <a class="btn btn-default" href="@Url.Action("Index","Categories")">
                                        <i class="fa fa-angle-left"></i>
                                        Back to List
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-default" href="@Url.Action("Edit","Categories", new { id = Model.Category_ID })">
                                        <i class="fa fa-edit"></i>
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        </table>

                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

